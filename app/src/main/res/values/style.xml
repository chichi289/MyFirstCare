<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFirstCare" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryVariant">@color/color_blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_yellow</item>
        <item name="colorSecondaryVariant">@color/color_blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="colorControlNormal">@color/white_gray</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="Button.GreenLight" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_rounded_corner_green_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_gray</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Button.Green" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_rounded_corner_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_gray</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.Custom.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/white_gray</item>
        <item name="android:textColorHint">@color/white_gray</item>
        <item name="colorControlNormal">@color/white_gray</item>
        <item name="colorControlActivated">@color/color_yellow</item>
        <item name="colorControlHighlight">@color/color_yellow</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="errorEnabled">true</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="errorTextColor">@color/color_yellow</item>
    </style>

    <style name="Widget.Theme.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/color_blue_medium</item>
        <item name="android:textColor">@color/white_gray</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

</resources>